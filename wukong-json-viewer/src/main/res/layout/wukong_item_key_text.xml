<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/kWuKong_item_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/wukongItemLeftTextView"
            android:layout_width="100dp"
            android:layout_height="38dp"

            android:layout_marginLeft="8dp"

            android:autoSizeMaxTextSize="15dp"
            android:autoSizeMinTextSize="2dp"

            android:autoSizeTextType="uniform"

            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"

            android:maxLines="1"
            android:text="上次活跃时间: "
            android:textSize="15dp"

            app:autoSizeMaxTextSize="15dp"
            app:autoSizeMinTextSize="2dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"

            />


        <TextView
            android:id="@+id/wukongItemRightTextView"
            android:layout_width="match_parent"
            android:layout_height="38dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_toRightOf="@id/wukongItemLeftTextView"

            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"

            android:ellipsize="end"
            android:singleLine="true"

            android:text="来呀, 小哥哥"
            android:textSize="15.0dp" />

    </RelativeLayout>

</RelativeLayout>