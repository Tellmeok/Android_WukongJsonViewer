<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/kWuKong_item_container_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@drawable/wukong_item_common_back_shape_rectangle"
        >


        <ImageView
            android:id="@+id/wukongItemLeftImageView"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"

            android:layout_marginLeft="8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/wukongItemLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="56dp"
            android:layout_above="@id/wukongItemCenterLine"

            android:text="名字"
            android:textColor="@color/wukong_all_black"
            android:textSize="16dp" />

        <View
            android:id="@+id/wukongItemCenterLine"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/wukongItemLeftDetailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/wukongItemCenterLine"
            android:layout_alignLeft="@id/wukongItemLeftTextView"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@id/wukongItemRightImageView"

            android:text="生于2008年8月8日，正是黄道吉日"
            android:textColor="@color/wukong_all_gray"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/wukongItemRightImageView"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:src="@mipmap/wukong_icon_arrow"
            android:layout_marginRight="8dp"
            />


    </RelativeLayout>


</RelativeLayout>